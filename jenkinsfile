pipeline {
    agent any

    tools {
        jdk 'chiomajava'
        maven 'chiomamaven'
    }

    environment {
        REPO_URL = 'https://github.com/Chioma-Mirabel88/ChiomaDevOpsLab.git'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üîÑ Cloning ChiomaDevOpsLab repository...'
                withCredentials([usernamePassword(
                    credentialsId: 'github-chioma',
                    usernameVariable: 'GIT_USERNAME',
                    passwordVariable: 'GIT_PASSWORD'
                )]) {
                    git url: "https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/Chioma-Mirabel88/ChiomaDevOpsLab.git"
                }
            }
        }

        stage('Compile') {
            steps {
                echo '‚öôÔ∏è Compiling the Maven project...'
                sh 'mvn compile'
            }
        }

        stage('Code Review') {
            steps {
                echo 'üîç Running static code analysis with PMD...'
                sh 'mvn pmd:pmd'
            }
        }

        stage('Package') {
            steps {
                echo 'üì¶ Packaging the application...'
                sh 'mvn package'
            }
        }
    }
}

